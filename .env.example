# App Configuration
VITE_APP_NAME="Bravo Education"
VITE_APP_VERSION="1.0.0"
VITE_APP_DESCRIPTION="Learning Management System"

# API Configuration
VITE_API_URL="http://localhost:3000/api"
VITE_API_VERSION="v1"
VITE_API_TIMEOUT=30000

# Authentication
VITE_AUTH_COOKIE_NAME="bravo_auth"
VITE_AUTH_TOKEN_EXPIRES=86400
VITE_AUTH_REFRESH_TOKEN_EXPIRES=604800
VITE_AUTH_PERSIST_KEY="bravo_auth_store"

# Organization Setup
VITE_ORG_LOGO_MAX_SIZE=5242880 # 5MB in bytes
VITE_ORG_LOGO_ALLOWED_TYPES="image/jpeg,image/png,image/gif"
VITE_ORG_MEMBER_INVITE_LIMIT=50
VITE_ORG_MEMBER_ROLES="admin,teacher,student"

# File Upload
VITE_UPLOAD_MAX_SIZE=10485760 # 10MB in bytes
VITE_UPLOAD_ALLOWED_TYPES="image/*,application/pdf"
VITE_UPLOAD_BASE_URL="https://storage.bravo-education.dev"

# Feature Flags
VITE_FEATURE_SOCIAL_LOGIN=true
VITE_FEATURE_GOOGLE_LOGIN=true
VITE_FEATURE_MICROSOFT_LOGIN=true
VITE_FEATURE_INVITE_BY_LINK=true

# External Services
VITE_GOOGLE_CLIENT_ID="your-google-client-id"
VITE_MICROSOFT_CLIENT_ID="your-microsoft-client-id"

# Error Reporting
VITE_SENTRY_DSN="your-sentry-dsn"
VITE_ERROR_REPORTING_LEVEL="error"

# Rate Limiting
VITE_RATE_LIMIT_MAX_REQUESTS=100
VITE_RATE_LIMIT_WINDOW_MS=60000

# Validation Rules
VITE_PASSWORD_MIN_LENGTH=8
VITE_PASSWORD_REQUIRE_UPPERCASE=true
VITE_PASSWORD_REQUIRE_LOWERCASE=true
VITE_PASSWORD_REQUIRE_NUMBER=true
VITE_PASSWORD_REQUIRE_SPECIAL=true

# Localization
VITE_DEFAULT_LANGUAGE="en"
VITE_DEFAULT_TIMEZONE="UTC"
VITE_SUPPORTED_LANGUAGES="en,vi,ja"

# Cache Configuration
VITE_CACHE_TTL=300 # 5 minutes in seconds
VITE_CACHE_PREFIX="bravo:"

# Development Tools
VITE_ENABLE_DEVTOOLS=true
VITE_ENABLE_API_MOCKING=false
VITE_ENABLE_DEBUG_LOGGING=true

# Security
VITE_ENABLE_CSP=true
VITE_ENABLE_CORS=true
VITE_ALLOWED_ORIGINS="http://localhost:3000,https://bravo-education.dev"

# Analytics
VITE_ENABLE_ANALYTICS=true
VITE_GOOGLE_ANALYTICS_ID="your-ga-id"

# Social Links
VITE_SOCIAL_TWITTER="https://twitter.com/bravoeducation"
VITE_SOCIAL_FACEBOOK="https://facebook.com/bravoeducation"
VITE_SOCIAL_LINKEDIN="https://linkedin.com/company/bravoeducation"

# Support
VITE_SUPPORT_EMAIL="support@bravo-education.dev"
VITE_SUPPORT_PHONE="+84935145999"
VITE_HELP_CENTER_URL="https://help.bravo-education.dev"
